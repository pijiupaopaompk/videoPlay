<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <declare-styleable name="UniversalMediaController">
        <attr name="uvv_scalable" format="boolean" />
    </declare-styleable>


    <declare-styleable name="UniversalVideoView">
        <attr name="uvv_fitXY" format="boolean" />
        <attr name="uvv_autoRotation" format="boolean" />
    </declare-styleable>

    <style name="Universal.Widget.ProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/uvv_progress_rotate</item>
        <item name="android:indeterminateDuration">1000</item>
    </style>
</resources>
